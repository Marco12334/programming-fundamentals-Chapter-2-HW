1.
temp_fahrenheit = 100

temp_celsius = (temp_fahrenheit - 32) * 5/9

print(f"The temperature in Celsius is {temp_celsius} degrees.")
2.
# Create variables for day, date, month, and year
day = "Monday"
date = "2"
month = "September"
year = "2019"

print("Day: ", day)
print("Date: ", date)
print("Month: ", month)
print("Year: ", year)

print("\nAmerican format:")
print(f"{day}, {month} {date}, {year}")

print("\nEuropean format:")
print(f"{day} {date} {month} {year}")
3.# Create variables for hour, minute, and second
hour = 17
minute = 15
second = 30

secondsSinceMidnight = hour * 3600 + minute * 60 + second
print("Seconds since midnight: " + str(secondsSinceMidnight))

remainingSeconds = 24 * 3600 - secondsSinceMidnight
print("Remaining seconds in the day: " + str(remainingSeconds))

percentagePassed = (secondsSinceMidnight / (24.0 * 3600)) * 100
print("Percentage of the day that has passed: " + str(percentagePassed) + "%")
4.
celsius = float(input("Enter a temperature in Celsius: "))

fahrenheit = 9/5 * celsius + 32

print(f"The temperature in Fahrenheit is {fahrenheit} degrees.")
5.# Define the value of PI
PI = 3.1416

radius = float(input("Enter the radius of the base circle: "))
length = float(input("Enter the length of the cylinder: "))

base_area = PI * radius ** 2

volume = base_area * length

print(f"The base area of the cylinder is {base_area} square units.")
print(f"The volume of the cylinder is {volume} cubic units.")
6.
total_seconds = int(input("Enter the total number of seconds: "))

hours = total_seconds // 3600
remaining_seconds = total_seconds % 3600
minutes = remaining_seconds // 60
seconds = remaining_seconds % 60

print(f"{total_seconds} seconds is equal to {hours} hours, {minutes} minutes, and {seconds} seconds.")
7.
length = float(input("Enter the length of the room: "))
width = float(input("Enter the width of the room: "))
height = float(input("Enter the height of the room: "))
num_windows = int(input("Enter the number of windows: "))
num_doors = int(input("Enter the number of doors: "))

total_area = 2 * (length * height + width * height) + length * width - (num_windows * 15 + num_doors * 21)

gallons = total_area // 350
quarts = (total_area % 350) / 350 * 4

print(f"You will need {gallons} gallons and {quarts} quarts of paint.")
8.
num = int(input("Enter a number between 0 and 1000: "))

hundreds = num // 100
tens = (num % 100) // 10
ones = num % 10

# Display the output
print(f"The digits in reverse order are {ones}{tens}{hundreds}.")


